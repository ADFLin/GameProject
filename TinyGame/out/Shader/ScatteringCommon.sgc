#pragma once
#include "Common.sgc"

// g = [-1,1]
float PhaseFunction_Mei(float LoE)
{
	return 1.0 / (4 * PI);
}

float PhaseFunction_HG(float LoE, float g)
{
	float g2 = Square(g);
	return (1.0 - g2) / pow((1.0 + g2 - 2 * g*LoE), 1.5);
}

float PhaseFunction_Schlick(float LoE, float g)
{
	float k = (1.55 - 0.55 * g * g) * g;
	return (1 - Square(k)) * Square(1.0 / (1.0 - k * LoE));
}