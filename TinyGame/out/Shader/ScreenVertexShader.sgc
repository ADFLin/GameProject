#include "Common.sgc"

struct VSOutputParameters
{
	float2 UVs;
};

#if VERTEX_SHADER

layout(location = ATTRIBUTE_POSITION) in float4 InPosition;
layout(location = ATTRIBUTE_TEXCOORD) in float2 InUV;

out VSOutputParameters VSOutput;

out gl_PerVertex
{
	float4 gl_Position;
};
void ScreenVS()
{
	gl_Position = InPosition;
	VSOutput.UVs = InUV;
}

#endif